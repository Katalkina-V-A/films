= form_for @book do |f|
  =error_messages_for @book
  .row
    .col-md-4
      .form-group
        =f.label :title
        =f.text_field :title, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :author
        = f.text_field :author, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :cover
        = f.file_field :cover
      -if @book.cover?
        .text-center
          =link_to @book.cover.url do
            =image_tag @book.cover.url(:thumb), alt: @book.title
  .row
    .col-md-4
      .form-group
        = f.label :publishing
        = f.text_field :publishing, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :year
        = f.text_field :year, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :series
        = f.text_field :series, class: 'form-control'
  .row
    .col-md-2
      .form-group
        = f.label :price
        = f.text_field :price, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :amount
        = f.text_field :amount, class: 'form-control'
  .row
    .col-md-9
      .form-group
        = f.label :description
        = f.text_area :description, rows: 6, class: 'form-control'

  .actions
    = f.submit nil, class: 'btn btn-primary'
